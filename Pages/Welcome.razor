@page "/welcome"
@page "/"
@inject NavigationManager Nav

<div class="welcome-container">
    <div class="logo-container">
        <img src="favicon.png" alt="MusicBasterds Logo" class="neon-logo" />
        <div class="logo-glow"></div>
    </div>
    <h1 class="neon-title">Welcome to MusicBasterds</h1>
    <p class="neon-subtitle">// Share and discover the best music albums with fellow bastards</p>

    <div class="button-group">
        <button class="neon-btn neon-btn-primary" @onclick="GoToLogin">
            [ Login ]
        </button>
        <button class="neon-btn neon-btn-outline" @onclick="GoToRegister">
            [ Sign Up ]
        </button>
    </div>
</div>

@code {
    private void GoToLogin() => Nav.NavigateTo("/login");
    private void GoToRegister() => Nav.NavigateTo("/register");
}

<style>
    .welcome-container {
        background: #000000;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        font-family: 'Courier New', monospace;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .logo-container {
        position: relative;
        margin-bottom: 3rem;
        width: 200px;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .neon-logo {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 0 20px #00ff41) drop-shadow(0 0 30px #00ff41) drop-shadow(0 0 40px rgba(0, 255, 65, 0.5));
        animation: logoPulse 3s ease-in-out infinite;
        z-index: 2;
        position: relative;
    }

    .logo-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 180px;
        height: 180px;
        background: radial-gradient(circle, rgba(0, 255, 65, 0.3) 0%, transparent 70%);
        border-radius: 50%;
        animation: glowPulse 2s ease-in-out infinite alternate;
        z-index: 1;
    }

    .neon-title {
        color: #00ff41;
        font-size: 3.5rem;
        font-weight: bold;
        text-shadow: 0 0 10px #00ff41, 0 0 20px #00ff41, 0 0 30px #00ff41, 0 0 40px rgba(0, 255, 65, 0.5);
        margin-bottom: 1.5rem;
        letter-spacing: 2px;
        animation: textGlow 2s ease-in-out infinite alternate;
    }

    .neon-subtitle {
        color: #00ff41;
        font-size: 1.3rem;
        opacity: 0.9;
        margin-bottom: 3rem;
        text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
        max-width: 600px;
        line-height: 1.6;
    }

    .button-group {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .neon-btn {
        background: transparent;
        color: #00ff41;
        border: 2px solid #00ff41;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        font-family: 'Courier New', monospace;
        position: relative;
        overflow: hidden;
    }

        .neon-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 255, 65, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .neon-btn:hover::before {
            left: 100%;
        }

        .neon-btn:hover {
            background: #00ff41;
            color: #000000;
            box-shadow: 0 0 20px #00ff41, 0 0 30px #00ff41, 0 0 40px rgba(0, 255, 65, 0.5);
            transform: translateY(-3px);
        }

    .neon-btn-primary {
        background: rgba(0, 255, 65, 0.1);
        box-shadow: 0 0 15px rgba(0, 255, 65, 0.3);
    }

    .neon-btn-outline {
        background: transparent;
    }

        .neon-btn-outline:hover {
            background: #00ff41;
            color: #000000;
        }

    /* Animations */
    @@keyframes logoPulse {
        0%, 100% {
            filter: drop-shadow(0 0 20px #00ff41) drop-shadow(0 0 30px #00ff41) drop-shadow(0 0 40px rgba(0, 255, 65, 0.5));
            transform: scale(1);
        }

        50% {
            filter: drop-shadow(0 0 25px #00ff41) drop-shadow(0 0 40px #00ff41) drop-shadow(0 0 50px rgba(0, 255, 65, 0.7));
            transform: scale(1.05);
        }
    }

    @@keyframes glowPulse {
        0% {
            opacity: 0.3;
            transform: translate(-50%, -50%) scale(1);
        }

        100% {
            opacity: 0.6;
            transform: translate(-50%, -50%) scale(1.2);
        }
    }

    @@keyframes textGlow {
        0% {
            text-shadow: 0 0 10px #00ff41, 0 0 20px #00ff41, 0 0 30px #00ff41, 0 0 40px rgba(0, 255, 65, 0.5);
        }

        100% {
            text-shadow: 0 0 15px #00ff41, 0 0 25px #00ff41, 0 0 35px #00ff41, 0 0 45px rgba(0, 255, 65, 0.7);
        }
    }

    /* Background effects */
    .welcome-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 20% 80%, rgba(0, 255, 65, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(0, 255, 65, 0.05) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(0, 255, 65, 0.08) 0%, transparent 50%);
        pointer-events: none;
        z-index: 0;
    }

    /* Ensure content stays above background */
    .logo-container,
    .neon-title,
    .neon-subtitle,
    .button-group {
        position: relative;
        z-index: 1;
    }

    /* Mobile responsiveness */
    @@media (max-width: 768px) {
        .neon-title {
            font-size: 2.5rem;
        }

        .neon-subtitle {
            font-size: 1.1rem;
            padding: 0 1rem;
        }

        .logo-container {
            width: 150px;
            height: 150px;
        }

        .logo-glow {
            width: 140px;
            height: 140px;
        }

        .button-group {
            flex-direction: column;
            gap: 1rem;
            width: 100%;
            max-width: 300px;
        }

        .neon-btn {
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .neon-title {
            font-size: 2rem;
        }

        .neon-subtitle {
            font-size: 1rem;
        }

        .logo-container {
            width: 120px;
            height: 120px;
        }

        .logo-glow {
            width: 110px;
            height: 110px;
        }
    }
</style>