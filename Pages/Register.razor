@page "/register"
@inject AuthService Auth
@inject NavigationManager Nav

<div class="register-container">
    <div class="register-box">
        <div class="register-header">
            <h3 class="neon-title">[ Create Account ]</h3>
            <p class="neon-subtitle">// Join the MusicBasterds community</p>
        </div>

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="@(IsError ? "neon-alert neon-alert-error" : "neon-alert neon-alert-success")">
                @if (IsError)
                {
                    <span>⚠️</span>
                }
                else
                {
                    <span>✅</span>
                }
                @Message
            </div>
        }

        <div class="form-group">
            <label class="neon-label">→ Username</label>
            <input @bind="User.Username" class="neon-input" placeholder="Choose your username"
                   @onkeypress="HandleKeyPress" />
        </div>

        <div class="form-group">
            <label class="neon-label">→ Email</label>
            <input type="email" @bind="User.Email" class="neon-input" placeholder="Enter your email"
                   @onkeypress="HandleKeyPress" />
        </div>

        <div class="form-group">
            <label class="neon-label">→ Password</label>
            <input type="password" @bind="User.Password" class="neon-input" placeholder="Create secure password"
                   @onkeypress="HandleKeyPress" />
        </div>

        <button class="neon-btn neon-btn-primary" @onclick="RegisterUser">
            [ Register Account ]
        </button>

        <div class="register-footer">
            <span class="neon-text">Already have an account? </span>
            <a href="/login" class="neon-link">Login here</a>
        </div>
    </div>
</div>

@code {
    private User User = new();
    private string? Message;
    private bool IsError;

    private async Task RegisterUser()
    {
        if (string.IsNullOrWhiteSpace(User.Username) ||
            string.IsNullOrWhiteSpace(User.Email) ||
            string.IsNullOrWhiteSpace(User.Password))
        {
            Message = "Please fill in all fields.";
            IsError = true;
            return;
        }

        var success = await Auth.RegisterAsync(User);
        if (success)
        {
            Message = "Registration successful! You can now log in.";
            IsError = false;
            // Clear form
            User = new User();
        }
        else
        {
            Message = "Username or email already exists.";
            IsError = true;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await RegisterUser();
        }
    }
}

