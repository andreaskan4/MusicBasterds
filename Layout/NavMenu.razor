<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">🎵 MusicBasterds</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable bg-dark text-light">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link text-light" href="/home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link text-light" href="/profile">
                <span class="bi bi-person-fill"></span> Profile
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link text-light" href="/upload">
                <span class="bi bi-cloud-upload-fill"></span> Upload
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link text-light" href="/stats">
                <span class="bi bi-bar-chart-fill"></span> Statistics
            </NavLink>
        </div>
        <div class="nav-item px-3 mt-3 border-top pt-2">
            <NavLink class="nav-link text-secondary" href="/welcome">
                <span class="bi bi-box-arrow-right"></span> Logout
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
